generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  email String @unique
  bio String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

